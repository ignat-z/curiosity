<% back_url = new_amaterasu_wizzard_email_path %>
<% address_info = Struct.new(:password).new %>

<%= turbo_frame_tag 'wizzard' do %>
  <%= form_with model: address_info, scope: :user, url: amaterasu_wizzard_passwords_path, method: :post do |form| %>
    <h2 class="p-4 px-2">Enter your password</h2>

    <div class="flex flex-col mb-4">
      <%= form.label :password, "password:" %>
      <%= form.text_field :password, value: session[:password] %>
    </div>

    <div class="flex justify-between">
      <%= link_to "Back", back_url, class: 'inline-block text-md btn', data: { turbo: false } %>
      <%= form.submit "Next", class: 'btn btn-primary bg-blue-500' %>
    </div>
  <% end %>
<% end %>
