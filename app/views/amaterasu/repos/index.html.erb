<div class="container page">
  <div class="mb-4 mt-2">
    <h1 class="text-2xl text-center font-semibold">GitHub Repositories</h1>
    <h1 class="text-base text-center">with dynamic hovers</h1>
  </div>

  <table class="min-w-full">
    <tbody class="bg-white divide-y divide-gray-200">
      <%- ['rails/rails', 'ruby/ruby', 'elixir-lang/elixir', 'phoenixframework/phoenix'].each do |repo| %>
        <tr class="flex-1 bg-white px-5 py-5">
          <td class="px-5 py-3">
            <%= content_tag :div,
              data: {
                controller: 'hovercard',
                hovercard_url_value: amaterasu_repo_path(repo),
                action: 'mouseenter->hovercard#show mouseleave->hovercard#hide'
              } do %>
                <%= link_to repo, "https://github.com/#{repo}", class: "text-2xl text-center font-semibold" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
