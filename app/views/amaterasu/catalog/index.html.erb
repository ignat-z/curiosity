<div class="container page">
  <div class="mb-4 mt-2">
    <h1 class="text-2xl text-center font-semibold">Catalog</h1>
    <h1 class="text-base text-center">with skeleton loading</h1>
  </div>

  <div class="mt-5 mb-10">
    <%= turbo_frame_tag :feed, src: amaterasu_catalog_fragment_path, loading: :lazy do %>
      <div class="flex flex-col space-y-4 w-full">
        <% Amaterasu::COUNT.times.each do %>
          <div class="bg-gray-50 border border-gray-300 shadow rounded-md p-4 w-2/3 mx-auto">
            <div class="animate-pulse flex space-x-4 items-center">
              <div class="rounded-full bg-gray-400 h-12 w-12"></div>
              <div class="flex-1 flex flex-col space-y-2">
                <div class="h-4 bg-gray-400 rounded w-2/3"></div>
                <div class="h-3 bg-gray-400 rounded w-1/3"></div>
              </div>
              <div>
                <div class="w-full flex-none bg-gray-400 py-6 px-10 rounded-lg"></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
